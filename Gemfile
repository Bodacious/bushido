# A sample Gemfile
source "https://rubygems.org"

# Use libsass with Ruby! (https://github.com/sass/sassc-ruby)
gem "sassc"

# A simple, blog aware, static site generator. (https://github.com/jekyll/jekyll)
gem 'jekyll', require: false

# Track GitHub Pages dependencies. (https://github.com/github/pages-gem)
gem 'github-pages', require: false

# Process manager for applications with multiple components (http://github.com/ddollar/foreman)
gem 'foreman', require: false

# kramdown is a fast, pure-Ruby Markdown-superset converter. (http://kramdown.gettalong.org)
gem "kramdown"

# Thor is a toolkit for building powerful command-line interfaces. (http://whatisthor.com/)
gem 'thor'

# A toolkit of support libraries and Ruby core extensions extracted from the Rails framework. (http://www.rubyonrails.org)
gem 'activesupport'
